generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

/// This model contains row level security and requires additional setup for migrations. Visit https://pris.ly/d/row-level-security for more info.
model Foods {
  food_name     String        @id(map: "Groceries_pkey")
  food_category category?
  FridgeItems   FridgeItems[]
}

/// This model or at least one of its fields has comments in the database, and requires an additional setup for migrations: Read more: https://pris.ly/d/database-comments
/// This model contains row level security and requires additional setup for migrations. Visit https://pris.ly/d/row-level-security for more info.
model Fridge {
  fridge_id   BigInt        @id @default(autoincrement())
  created_at  DateTime      @default(now()) @db.Timestamptz(6)
  FridgeItems FridgeItems[]
  UserFridge  UserFridge[]
}

/// This model or at least one of its fields has comments in the database, and requires an additional setup for migrations: Read more: https://pris.ly/d/database-comments
/// This model contains row level security and requires additional setup for migrations. Visit https://pris.ly/d/row-level-security for more info.
model UserDefinedFoods {
  food_name     String    @id
  food_category category?
  user_id       BigInt?
  Users         Users?    @relation(fields: [user_id], references: [id], onDelete: Cascade)
}

/// This model or at least one of its fields has comments in the database, and requires an additional setup for migrations: Read more: https://pris.ly/d/database-comments
/// This model contains row level security and requires additional setup for migrations. Visit https://pris.ly/d/row-level-security for more info.
model Users {
  id               BigInt             @id @default(autoincrement())
  user_email       String?
  user_name        String?
  created_at       DateTime?          @default(now()) @db.Timestamptz(6)
  FridgeItems      FridgeItems[]
  UserDefinedFoods UserDefinedFoods[]
  UserFridge       UserFridge[]
}

/// This model contains row level security and requires additional setup for migrations. Visit https://pris.ly/d/row-level-security for more info.
model FridgeItems {
  created_at       DateTime  @default(now()) @db.Timestamptz(6)
  fridge_id        BigInt
  food_name        String
  added_by_user_id BigInt
  quantity         BigInt?
  expires_at       DateTime? @db.Timestamptz(6)
  Users            Users     @relation(fields: [added_by_user_id], references: [id], onDelete: Cascade)
  Foods            Foods     @relation(fields: [food_name], references: [food_name], onDelete: Cascade)
  Fridge           Fridge    @relation(fields: [fridge_id], references: [fridge_id], onDelete: Cascade)

  @@id([fridge_id, food_name, added_by_user_id])
}

/// This model contains row level security and requires additional setup for migrations. Visit https://pris.ly/d/row-level-security for more info.
model UserFridge {
  user_id    BigInt   @default(autoincrement())
  created_at DateTime @default(now()) @db.Timestamptz(6)
  fridge_id  BigInt
  Fridge     Fridge   @relation(fields: [fridge_id], references: [fridge_id], onDelete: Cascade)
  Users      Users    @relation(fields: [user_id], references: [id], onDelete: Cascade)

  @@id([user_id, fridge_id])
}

enum category {
  VEGGIES
  CARBS
  PROTEINS
  CONDIMENTS
  DAIRY
  DRINKS
  FRUITS
  EXTRAS
}
